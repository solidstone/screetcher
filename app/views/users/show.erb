<%= @user.username %> 
<% if current_user && @user.followed(current_user) %>
	Following
<% else %>
	<%= link_to "Follow", "/follows/create/#{@user.id}"  %>
<% end %>	

<% @user.posts.order('created_at DESC').each do |post| %>
	<%= post.content %> <br />
	Posted On: <%= post.created_at.to_formatted_s(:long) %> <br />
<% end %>